
	<h1>Contact</h1>

	<div class="row">
		<div class="col-md-6">
			<ul>
				<li>{{#link-to 'phone'}}Phone{{/link-to}}</li>	
				<li>{{#link-to 'email'}}Email{{/link-to}}</li>		
			</ul>

			{{#if messageSent}}
				<p>Thanks for the message. Your confirmation number is {{confirmationNumber}}.</p>
			{{else}}
				<p>Or, <a href="#" {{action 'sendMessage'}}>Click here</a>to send a message.</p>
			{{/if}}
		</div>
		<div class="col-md-6">
			{{outlet}}
		</div>
	</div>
